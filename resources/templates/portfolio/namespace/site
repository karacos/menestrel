<%namespace name="form" file="/technobabble/namespace/form"/>

<%def name="show_content(action,instance,result)">
	% if action:
		
		<div>
		 ${form.show_action(action)}
		 </div>
	    
	% else:
		<%include file="${instance.get_instance_template_uri()}"/>
	% endif
</%def>

<%def name="show_menu(instance)">
<% import karacos %>
     <div id="menu">
                
        <ul>	
		<!-- put your navigation links and text here -->
		<% menuclass = '' %>
		% if isinstance(instance, karacos.db['Domain']):
		<% menuclass = 'class="selected"' %>
		% endif
		<li ${menuclass}><a href="/">home</a></li>
		<% childrens = instance.__domain__.get_web_childrens_for_id() %>
		% for child in childrens.keys():
			<% menuclass = '' %>
			% if instance['name'] == childrens[child] and isinstance(instance.__parent__, karacos.db['Domain']):
				<% menuclass = 'class="selected"' %>
			% endif
			<li ${menuclass}><a href="${instance.__domain__._get_action_url()}${childrens[child]}/">${childrens[child]}</a></li>
		% endfor
		</ul>
	</div><!-- menu -->
</%def>

<%def name="head(instance)">
	
	<!-- change this to the title you want to appear in browser title bar -->
	<meta name="robots" content="index,follow" />
	<title>
	% if 'title' in instance:
		${instance['title']}
	% else:
		${instance['name']}
	% endif
	</title>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="author" content="" />
	% if 'description' in instance:
  	<meta name="description" content="${instance['description']}" />
  % else:
  	<meta name="description" content="${instance['name']}" />
  % endif
  % if 'keywords' in instance:
  	<meta name="keywords" content="${instance['keywords']}" />
  % else:
    <meta name="keywords" content="${instance['name']}" />
  % endif
	<link rel="stylesheet" href="/m_design/themes/portfolio/style.css" type="text/css" />
	% if 'head_bloc' in instance.__domain__:
		${instance.__domain__['head_bloc']}
	% endif
	## % if isstaff:
	<script>GENTICS_Aloha_base="/_browser/aloha/";</script>
	<script type="text/javascript" src="/_browser/aloha/core/include.js"></script>
	<script type="text/javascript" src="/_browser/aloha/plugins/com.gentics.aloha.plugins.Format/plugin.js"></script>
	<script type="text/javascript" src="/_browser/aloha/plugins/com.gentics.aloha.plugins.Table/plugin.js"></script>
	<script type="text/javascript" src="/_browser/aloha/plugins/com.gentics.aloha.plugins.List/plugin.js"></script>
	<script type="text/javascript" src="/_browser/aloha/plugins/com.gentics.aloha.plugins.Link/plugin.js"></script>
	##<script type="text/javascript" src="/_browser/aloha/plugins/com.gentics.aloha.plugins.HighlightEditables/plugin.js"></script>
	##<script type="text/javascript" src="/_browser/aloha/plugins/com.gentics.aloha.plugins.TOC/plugin.js"></script>
	
	<script type="text/javascript" src="/_browser/aloha/plugins/org.karacos.aloha.Plugin/plugin.js"></script>
	

	 ## % endif
	
	
</%def>

